{
      "restartable": "rs",
      "ignore": [
            ".git",
            "node_modules/**/node_modules",
            "pages",
            ".next",
            "layouts",
            "common",
            "components",
            "static"
      ],
      "verbose": true,
      "execMap": {
            "": "node",
            "js": "node --harmony"
      },
      "events": {
            "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
      },
      "watch": [
            "server"
      ],
      "ext": "js json",
      "legacy-watch": false
}